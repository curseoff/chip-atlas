            scriptCharset: 'utf-8',
            success : function(response) {
              // alert(JSON.stringify(response));
              alert(response.url);
              window.open(response.url, "_self", "")
            },
            error : function(response){
              // alert(JSON.stringify(response));
              alert("error!");
            },
            complete: function(){
              button.attr("disabled", false);
            }
          });
        })
      })
