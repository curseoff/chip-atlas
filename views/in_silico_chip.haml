    :javascript
      $('button.go-experiment').on('click', function(event){
        event.preventDefault();
        var expid = $('input#jumpToExperiment').val();
        window.open('/view?id='+expid);
      });

      // hide and show by checked radio buttons
      function defaultPosition(){
        var genome = $('.genomeTab ul li.active a').attr('source').replace(/[\n\s ]/g, "");
        $('.panel-input.bed').show();
        $('.panel-input.gene.default-hide').hide();
        $('.panel-input.distTSS').hide();
        $('.panel-input.rnd').show();
        $('.panel-input.bed-input.comparedWith').hide();
        $('input#'+genome+'comparedWithBed').prop("checked",false);
        $('input#'+genome+'comparedWithRandom').prop("checked",true);
        $('input#'+genome+'comparedWithRandomx1').prop("checked",true);
        $('input#'+genome+'comparedWithRefseq').prop("checked",false);
        $('input#'+genome+'comparedWithUserlist').prop("checked",false);
        $('input#' + genome + 'DistanceUp').val(0);
        $('input#' + genome + 'DistanceDown').val(0);
      }

      // bed or gene
      $("input[name='bedORGene']").change(function(){
        var genome = $('.genomeTab ul li.active a').attr('source').replace(/[\n\s ]/g, "");
        switch($(this).val()){
